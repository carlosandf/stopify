---
import PlayIcon from "@/icons/Play.astro";
import type { Playlist } from "@/lib/data";

interface Props {
  playlist: Playlist;
}

const { playlist } = Astro.props;
const { id, cover, title, color, artists } = playlist;

const artistListsString = artists.join(", ");
---

<a
  href={`playlist/${id}`}
  class="playlist-item h-12 grid grid-cols-[auto_1fr_auto] relative overflow-hidden items-center gap-4 rounded-[4px] bg-white-2/20 transition-all duration-200 hover:bg-white-2/40"
>
  <picture class="h-12 flex-none aspect-square">
    <img
      src={cover}
      alt={`Cover of ${title} by ${artistListsString}`}
      class="object-cover w-full h-full"
    />
  </picture>

  <div class="grid w-full">
    <h4 class="font-bold text-md text-white-1 truncate">
      {title}
    </h4>
  </div>

  <div class="p-2">
    <div class="p-2 rounded-full bg-green-500">
      <PlayIcon />
    </div>
  </div>
</a>
