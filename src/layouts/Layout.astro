---
import AsideMenu from "../components/AsideMenu.astro";
import "../global.css";
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <div id="app" class="relative h-screen p-2 gap-2 grid">
      <aside class="[grid-area:aside] flex flex-col overflow-y-auto rounded-lg">
        <AsideMenu />
      </aside>

      <main
        class="[grid-area:main] bg-[var(--bg-color)] rounded-lg overflow-y-auto"
      >
        MAIN
      </main>

      <footer class="[grid-area:player] min-h-[70px]">PLAYER</footer>
      <slot />
    </div>
  </body>
</html>
<style>
  #app {
    display: grid;
    grid-template-areas:
      "aside main main"
      "player player player";
    grid-template-columns: 350px 1fr 1fr;
    grid-template-rows: 1fr auto;
  }
</style>

<style is:global>
  :root {
    --bg-color: #121212;
    --txt-second: #a7a7a7;
    --txt-primary: #fff;
  }
  html {
    font-family: "CircularStd", sans-serif;
    background: #000000;
  }
  /* main {
    background-color: var(--bg-color);
  } */
</style>
